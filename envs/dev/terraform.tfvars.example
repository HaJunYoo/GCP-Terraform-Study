# EXAMPLE CONFIGURATION FILE - DO NOT USE ACTUAL CREDENTIALS
# Copy this file to terraform.tfvars and replace dummy values with real ones
# NEVER commit terraform.tfvars to version control

# Dev environment configuration
billing_account_id = "ABCDEF-123456-789012" # Replace with your actual billing account ID

# Legacy resource configuration (existing resources)
project_id  = "your-existing-project-id"
region      = "asia-northeast3" # Seoul region
zone        = "asia-northeast3-a"
environment = "dev"

# Legacy storage configuration
bucket_names = [
  "your-terraform-storage-1",
  "your-terraform-storage-2"
]
storage_class = "STANDARD"

# Legacy compute configuration
instances = {
  web-server = {
    name         = "your-web-server-seoul"
    machine_type = "e2-medium"
    zone         = "asia-northeast3-a"
    image        = "debian-cloud/debian-12"
    disk_size    = 20
    tags         = ["web", "dev", "seoul"]
    labels = {
      role = "web-server"
      team = "your-team"
    }
    metadata = {
      startup-script = "#!/bin/bash\napt-get update\napt-get install -y nginx"
    }
  }

  api-server = {
    name             = "your-api-server-seoul"
    machine_type     = "n1-standard-1"
    zone             = "asia-northeast3-b"
    image            = "ubuntu-os-cloud/ubuntu-2204-lts"
    disk_size        = 30
    enable_public_ip = true
    tags             = ["api", "dev", "seoul"]
    labels = {
      role = "api-server"
      team = "your-team"
    }
    metadata = {
      startup-script = "#!/bin/bash\napt-get update\napt-get install -y docker.io"
    }
  }
}
