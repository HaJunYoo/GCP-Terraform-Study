# EXAMPLE CONFIGURATION FILE - DO NOT USE ACTUAL CREDENTIALS
# Copy this file to terraform.tfvars and replace dummy values with real ones
# NEVER commit terraform.tfvars to version control

# Dev environment configuration
billing_account_id = "ABCDEF-123456-789012" # Replace with your actual billing account ID
environment        = "dev"

base_project_id = "your-existing-project-id"

# Budget configuration
budget_amount    = "50"   # Monthly budget in USD (adjust as needed)
currency_code    = "USD"  # Change to KRW if using Korean Won

# Budget alert thresholds (default: 50%, 90% current spend, 100% forecasted)
threshold_rules = [
  {
    threshold_percent = 50
    spend_basis       = "CURRENT_SPEND"
  },
  {
    threshold_percent = 80
    spend_basis       = "CURRENT_SPEND"
  },
  {
    threshold_percent = 100
    spend_basis       = "FORECASTED_SPEND"
  }
]

# Notification settings
enable_budget_notifications = true
notification_channels       = [] # Add your notification channel IDs here

# Email notifications for budget alerts
notification_emails = [
  "admin@example.com",        # Add more emails here
  "team@example.com"          # Add more emails here
]
