# EXAMPLE CONFIGURATION FILE - DO NOT USE ACTUAL CREDENTIALS
# Copy this file to terraform.tfvars and replace dummy values with real ones
# NEVER commit terraform.tfvars to version control

# Dev environment configuration
billing_account_id = "ABCDEF-123456-789012" # Replace with your actual billing account ID
environment        = "dev"

base_project_id = "your-existing-project-id"

vpc_auto_create_subnets = false
vpc_mtu                 = 1460
gcp_region              = "asia-northeast3"
subnet_ip_range         = ["10.1.0.0/24"]

master_authorized_networks = [
    {
      cidr_block   = "your-office-cidr"
      display_name = "office-network"
    }
  ]

# GKE IP ranges - ensure these don't overlap with subnet ranges
pods_ip_range     = "10.x.0.0/21"    # Kubernetes pods IP range (use different /21 block)
services_ip_range = "10.y.0.0/21"    # Kubernetes services IP range (use different /21 block)
master_ip_range   = "10.z.0.0/28"    # GKE master nodes IP range (use /28 block)
